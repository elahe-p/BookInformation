@page
@model IndexModel
@{
    ViewData["Title"] = "Audit Logs";
}

<h2>Audit Logs</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Action</th>
            <th>Changed At</th>
            <th>Property</th>
            <th>Old Value</th>
            <th>New Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs.Items)
        {
            <tr>
                <td>@log.Action</td>
                <td>@log.ChangedAt.LocalDateTime.ToString("yyyy/MM/dd HH:mm")</td>
                <td>@log.PropertyName</td>
                <td>@log.OldValue</td>
                <td>@log.NewValue</td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Logs.TotalCount > Model.Logs.PageSize)
{
    <nav aria-label="AuditLog Pagination">
        <ul class="pagination">
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item active"><a class="page-link" href="#">@Model.Logs.Page</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
}

<a asp-page="/Books/Index" class="btn btn-secondary mb-3">
    Back to Books
</a>