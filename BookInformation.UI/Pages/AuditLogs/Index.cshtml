@page
@model BookInformation.UI.Pages.AuditLogs.IndexModel
@{
    ViewData["Title"] = "Audit Logs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Audit Logs <small class="text-muted">(Page @Model.CurrentPage)</small></h2>
        <a asp-page="/Books" class="btn btn-outline-secondary btn-sm">Back to Books</a>
    </div>

    <hr />

    <table class="table table-hover table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Action</th>
                <th>Changed At</th>
                <th>Property</th>
                <th>Old Value</th>
                <th>New Value</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Logs.Items != null && Model.Logs.Items.Any())
            {
                foreach (var log in Model.Logs.Items)
                {
                    <tr>
                        <td><span class="badge bg-secondary">@log.Action</span></td>
                        <td>@log.ChangedAt.LocalDateTime.ToString("yyyy/MM/dd HH:mm")</td>
                        <td><strong>@log.PropertyName</strong></td>
                        <td class="text-danger">@log.OldValue</td>
                        <td class="text-success">@log.NewValue</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No logs found for this entry.</td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">

                <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                    <a class="page-link"
                        href="?bookId=@Model.BookId&page=@(Model.CurrentPage - 1)&pageSize=@Model.PageSize">
                        &laquo; Previous
                    </a>
                </li>

                <li class="page-item active">
                    <span class="page-link">
                        Page @Model.CurrentPage of @Model.TotalPages
                    </span>
                </li>

                <li class="page-item @(Model.HasNext ? "" : "disabled")">
                    <a class="page-link"
                        href="?bookId=@Model.BookId&page=@(Model.CurrentPage + 1)&pageSize=@Model.PageSize">
                        Next &raquo;
                    </a>
                </li>

            </ul>
        </nav>
    }
</div>